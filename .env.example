# Configuración de Variables de Entorno

# APIs Genéricas (sin mencionar proveedores específicos)
LLM_API_ENDPOINT=https://api.llmprovider.com/v1/chat
LLM_API_KEY=your-llm-api-key

EMBEDDING_API_ENDPOINT=https://api.embeddingprovider.com/v1/embeddings  
EMBEDDING_API_KEY=your-embedding-api-key

# Base de datos
DATABASE_URL=postgresql://cognitive_user:secure_password@localhost:5432/cognitive_memory

# Configuración MAHOUT (Tecnología Propietaria)
MAHOUT_ENABLED=true
MAHOUT_COGNITIVE_THRESHOLD=0.75
MAHOUT_PATTERN_RECOGNITION=advanced

# Configuración del Sistema
MAX_POOL_SIZE=20
MIN_POOL_SIZE=5
LOG_LEVEL=info

# SaaS Configuration
API_RATE_LIMIT_PER_MINUTE=60
MAX_TOKENS_PER_REQUEST=100000
