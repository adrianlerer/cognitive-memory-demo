# Cognitive Memory System Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://localhost/cognitive_memory

# OpenAI Configuration (for embeddings)
OPENAI_API_KEY=sk-proj-your-openai-key-here

# MAHOUTâ„¢ API Configuration
# For demo: use "demo-key"
# For production: contact sales@integridai.com
MAHOUT_API_KEY=demo-key

# Security
SECRET_KEY=your-secret-key-change-in-production

# Optional: Generic LLM endpoint (if not using OpenAI)
LLM_API_KEY=your-llm-key
LLM_API_ENDPOINT=https://your-llm-endpoint.com/v1/chat

# Deployment Configuration
PORT=8000
ENVIRONMENT=development

# Rate Limiting
MAX_REQUESTS_PER_IP_DAY=50
MAX_REQUESTS_PER_API_KEY=1000

# Demo Mode Settings
DEMO_EXPIRES=2025-07-31
DEMO_MAX_CONVERSATIONS=10
